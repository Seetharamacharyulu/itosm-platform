# ===========================================
# ITOSM Platform Environment Configuration
# ===========================================
# Copy this file to .env and update with your values
# SECURITY WARNING: Never use these example values in production!

# Database Configuration - REQUIRED, NO DEFAULTS
# PostgreSQL Admin (for database creation and management)
POSTGRES_DB=itosm_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_POSTGRES_ADMIN_PASSWORD_32_CHARS_MIN

# Application Database User (least privilege)
APP_DB_USER=itosm_app
APP_DB_PASSWORD=CHANGE_ME_APP_USER_PASSWORD_32_CHARS_MIN
DATABASE_URL=postgresql://itosm_app:CHANGE_ME_APP_USER_PASSWORD_32_CHARS_MIN@database:5432/itosm_db

# Application Configuration - REQUIRED, NO DEFAULTS
NODE_ENV=production
PORT=5000
SESSION_SECRET=CHANGE_ME_TO_ULTRA_SECURE_64_CHAR_RANDOM_STRING_FOR_SESSION_SECURITY

# Object Storage (Google Cloud Storage) - Optional
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
PRIVATE_OBJECT_DIR=.private
PUBLIC_OBJECT_SEARCH_PATHS=public

# Security Settings
PGHOST=database
PGPORT=5432
PGUSER=postgres
PGPASSWORD=secure_password_change_me
PGDATABASE=itosm_db

# Production Settings (uncomment for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# DOMAIN=your-domain.com

# Backup Configuration
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30