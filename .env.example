# ===========================================
# ITOSM Platform Environment Configuration
# ===========================================
# Copy this file to .env and update with your values
# SECURITY WARNING: Never use these example values in production!

# Database Configuration - REQUIRED, NO DEFAULTS
# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=itosm_production
MYSQL_USER=itosm_admin
MYSQL_PASSWORD=CHANGE_ME_MYSQL_PASSWORD_32_CHARS_MIN
DATABASE_URL=mysql://itosm_admin:CHANGE_ME_MYSQL_PASSWORD_32_CHARS_MIN@localhost:3306/itosm_production

# Application Configuration - REQUIRED, NO DEFAULTS
NODE_ENV=production
PORT=5000
SESSION_SECRET=CHANGE_ME_TO_ULTRA_SECURE_64_CHAR_RANDOM_STRING_FOR_SESSION_SECURITY

# Object Storage (Google Cloud Storage) - Optional
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
PRIVATE_OBJECT_DIR=.private
PUBLIC_OBJECT_SEARCH_PATHS=public

# Security Settings
PGHOST=database
PGPORT=5432
PGUSER=postgres
PGPASSWORD=secure_password_change_me
PGDATABASE=itosm_db

# Production Settings (uncomment for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# DOMAIN=your-domain.com

# Backup Configuration
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30